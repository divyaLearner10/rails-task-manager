<%= form_with model: task do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
    <%= f.label :completed %>
    <%= f.text_field :completed, class: 'form-control'  %>

    <%= f.submit "Update Task", class: 'btn btn-success' %>
  </div>
<% end %>
