<%= form_with model: @task do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control' %>
    <br>
    <%= f.label :details, class: 'form-label' %>
    <%= f.text_field :details, class: 'form-control' %>
    <br>
    <%= f.label :completed, class: 'form-label' %>
    <%= f.text_field :completed, class: 'form-control' %>
    <br>
    <%= f.submit "Create Task", class: 'btn btn-success'%>
  </div>
<% end %>
